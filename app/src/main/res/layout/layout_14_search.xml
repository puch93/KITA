<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:hint="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@color/color_white">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:paddingLeft="16dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_back" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="Search"
            android:textColor="@color/color_292929"
            android:textSize="19dp"
            android:textStyle="bold" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e5e5e5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_height="48dp"
        android:paddingLeft="20dp"
        android:background="@drawable/shape_stroke_rec"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="@color/color_404040"
            android:textColorHint="@color/color_aaaaaa"
            android:textSize="12dp"
            android:hint="Please enter your search term" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="16.7dp"
                android:layout_height="18.3dp"
                android:layout_gravity="center"
                android:src="@drawable/btn_search"/>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>