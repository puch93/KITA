<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/color_e5e5e5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.3dp"
        android:layout_marginRight="28.3dp"
        android:background="@drawable/sel_round_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="Select Region"
            android:textColor="@color/color_292929"
            android:textSize="18dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="21.3dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="18.7dp"
            android:background="@drawable/sel_popup_region_menu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.7dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Region name01"
                android:textColor="@color/col_popup_region"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18.3dp"
                android:src="@drawable/sel_popup_region_check" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="21.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18.7dp"
            android:background="@drawable/sel_popup_region_menu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.7dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Region name01"
                android:textColor="@color/col_popup_region"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18.3dp"
                android:src="@drawable/sel_popup_region_check" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="21.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18.7dp"
            android:background="@drawable/sel_popup_region_menu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.7dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Region name01"
                android:textColor="@color/col_popup_region"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18.3dp"
                android:src="@drawable/sel_popup_region_check" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="21.3dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18.7dp"
            android:background="@drawable/sel_popup_region_menu"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16.7dp"
            android:paddingRight="18dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Region name01"
                android:textColor="@color/col_popup_region"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18.3dp"
                android:src="@drawable/sel_popup_region_check" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/sel_popup_bottom_left"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/color_aaaaaa"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:background="@drawable/sel_popup_bottom_right"
                android:gravity="center"
                android:text="Complete!"
                android:textColor="@color/color_white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>