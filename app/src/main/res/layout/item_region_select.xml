<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="21.3dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="18.7dp"
    android:background="@drawable/sel_popup_region_menu"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16.7dp"
    android:paddingRight="18dp">

    <TextView
        android:id="@+id/tv_region"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="Region name01"
        android:textColor="@color/col_popup_region"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18.3dp"
        android:src="@drawable/sel_popup_region_check" />

</LinearLayout>