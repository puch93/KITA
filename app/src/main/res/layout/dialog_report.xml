<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/color_e5e5e5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.3dp"
        android:gravity="center_horizontal"
        android:layout_marginRight="28.3dp"
        android:background="@drawable/sel_round_background"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="43dp"
            android:layout_height="50dp"
            android:layout_marginTop="38dp"
            android:src="@drawable/img_report_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:layout_marginBottom="38dp"
            android:textColor="@color/color_404040"
            android:lineSpacingExtra="3sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:text="Are you sure\nyou want to report this member?"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:background="@drawable/sel_popup_bottom_left"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/color_aaaaaa"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="55dp"
                android:background="@drawable/sel_popup_bottom_right"
                android:gravity="center"
                android:text="Report"
                android:textColor="@color/color_white"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>